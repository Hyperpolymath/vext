{
  "name": "@vext/tools",
  "version": "1.0.0",
  "exports": {
    ".": "./src/mod.ts",
    "./hook": "./src/hook.ts"
  },
  "tasks": {
    "build": "deno task rescript:build && deno check src/**/*.ts",
    "rescript:build": "rescript build -with-deps",
    "rescript:watch": "rescript build -w",
    "rescript:clean": "rescript clean",
    "test": "deno test --allow-read --allow-write --allow-net",
    "hook:git": "deno run --allow-net --allow-env --allow-read src/hooks/git.ts",
    "hook:install": "deno run --allow-read --allow-write src/hooks/install.ts"
  },
  "imports": {
    "@std/path": "jsr:@std/path@^1",
    "@std/fs": "jsr:@std/fs@^1",
    "@std/cli": "jsr:@std/cli@^1"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false
  }
}
